<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.halil.halilingo.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="wordId"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="animal"
            app:argType="com.halil.halilingo.WordModel" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.halil.halilingo.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/learnedFragment"
        android:name="com.halil.halilingo.LearnedFragment"
        android:label="fragment_learned"
        tools:layout="@layout/fragment_learned" />
</navigation>